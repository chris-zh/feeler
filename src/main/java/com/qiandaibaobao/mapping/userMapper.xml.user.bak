<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.qiandaibaobao.dao.UserDAO">
    <select id="fetchUserByNameAndPassword" resultType="user">
        select id, name, password from user where name=#{name}
        and password = #{password}
    </select>
    <select id="fetchUserById" resultType="user">
        select id, name, password from user where id = #{id}
    </select>
    <insert id="addUser">
        insert into user (id,name, password) values(tmp_s_user.nextval, #{name}, #{password})
    </insert>
    <update id="updateUser">
        update user set name = #{name}, password = #{password} where id = #{id}
    </update>
    <select id="fetchUserId" resultType="int">
        select id from user where name=#{name}
    </select>
    <select id="countUserName" resultType="int">
        select count(id) from user where name=#{name}
    </select>
</mapper>